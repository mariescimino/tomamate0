<div class="container" style="margin: 100px auto">
    <div class="row">
        <div class="col">
            <p style="float: right">
                <span>Hola {{usuario}}!</span>
                <a href="/admin/login/logout" class="btn btn-danger">Cerrar sesi√≥n <i
                        class="fasfa-sign-out-alt"></i></a>
            </p>
        </div>
    </div>
    {{!-- fin de la fila 1 --}}
    {{!-- inicio fila 2 --}}
    <div class="row">
        <div class="col-7">
            <h2>Nuevos productos MATEicos!</h2>
        </div>
        <div class="col-2 text-right">
            <a href="/admin/novedades/agregar" class="btn btn-success"> <i class="fas fa-plus"></i>Nuevo</a>
        </div>
        <div class="col-3 text-end d-flex">
            <form class="d-flex" role="search" action="/admin/novedades" method="get">
                <input class="form-control me-2" type="search" placeholder="Buscar" aria-label="Search" name="q" {{#if
                    q}} value="{{q}}" {{/if}}>
                <button class="btn btn-outline-success" type="submit"><i class="fa fa-search"
                        aria-hidden="true"></i></button>
            </form>
        </div>
    </div>
    {{!-- fin fila 2 --}}
    {{!-- inicio fila 3 --}}
    <div class="row">
        <div class="col">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Producto</th>
                        <th scope="col">Imagen</th>
                        <th scope="col" class="text-right">Precio</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{producto}}</td>
                        <td>{{{imagen}}}</td>
                        <td class="text-right">
                            <a href="/admin/novedades/modificar/{{id}}" class="btn btn-sm btn-secondary"><i
                                    class="fa fa-pencil-alt"></i></a>
                            <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-sm btn-secondary"><i
                                    class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            {{#if is_search}}
                {{#unless novedades.length}}
                    No se encotraron resultados para "<strong>{{q}}</strong>"
                {{/unless}}
            {{/if}}

        </div>
    </div>
</div>


</div>